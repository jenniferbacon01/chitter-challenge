<%= erb :'partials/header' %>
<%= erb :'partials/navbar' %>

<h1> Peeps with #<%= @searchtag %></h1>

<ul id='peeps'>
  <% @peeps.each do |peep| %>
    <li>
      <h3><%= peep.message %></h3>
      <% peep.tags.each do |tag| %>
        <%= "##{tag.tagname}" %>
      <% end %>
      <%= "(posted by #{peep.user.username} at #{peep.created_at.strftime("%H:%M")})" %>
  <% end %>
</ul>

<form action='/peeps' method='get'>
  <input type='submit' value='Unfilter'/>
</form>
